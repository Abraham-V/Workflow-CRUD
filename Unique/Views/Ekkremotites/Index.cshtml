@model IEnumerable<MvcProducts.Models.Product>

@{
    ViewData["Title"] = "Pending";
}
<div>
    <table data-toggle="table" data-sort-name="Number" data-sort-order="asc">
        <thead>
            <tr>
                <th data-field="Number" data-sortable="true" data-align="center">
                    Number
                </th>
                <th>
                    Product
                </th>
                <th data-sortable="true">
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Pending
                </th>
                <th  data-align="center">
                    Details
                </th>
                <th  data-align="center">
                    To
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @if (item.Location == "Εκκρεμότητες")
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Products)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ekkremotites)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                            
                        </td>
                        <td>
                            <a asp-action="Move" asp-route-id="@item.ID">For fixing</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>