@model MvcProsEpiskevi.Models.cProsEpiskevi

@{
    ViewData["Title"] = "Move";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Move">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- <input type="hidden" asp-for="ID" /> -->
            <div class="form-group">
                <label>Fix Date</label>
                <input asp-for="FixDate" class="form-control" />
                <span asp-validation-for="FixDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Location" class="form-control" value="Προς Επισκευή" />
            </div>
            <div class="form-group">
                <input type="submit" value="Αποθήκευση" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>

