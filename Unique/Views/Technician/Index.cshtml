@model IEnumerable<MvcProducts.Models.Product>

@{
    ViewData["Title"] = "Technician";
}

<div>
<table data-toggle="table" data-sort-name="FixDate" data-sort-order="asc">
    <thead>
        <tr>
            <th data-sortable="true"  data-align="center">
                Number
            </th>
            <th>
                Product
            </th>
            <th data-sortable="true">
                Name
            </th>
            <th data-field="FixDate" data-sortable="true"  data-align="center" data-sorter="dateSorter">
                Fix Date
            </th>
            <th>
                Description
            </th>
            <th>
                Notes / Backup
            </th>
            <th  data-align="center">
                Details
            </th>
            <th  data-align="center">
                To
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
   @if (item.Location == "Εργασία Τεχνικού")
   {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.FixDate == null)
                {
                    <a asp-action="AddDate" asp-route-id="@item.ID">Add</a>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.FixDate)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a>
            </td>
            <td>
                <a asp-action="Move" asp-route-id="@item.ID" asp-route-count="@Model.Count()">Costing</a>
                <br />
                <a asp-action="MoveEkkremotites" asp-route-id="@item.ID" asp-route-count="@Model.Count()">Pending</a>
                <br />
                <a asp-action="MovePromitheftes" asp-route-id="@item.ID" asp-route-count="@Model.Count()">Suppliers</a>
            </td>
        </tr>
    }
 }
    </tbody>
</table>
</div>