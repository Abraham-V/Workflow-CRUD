@model MvcProsthikiArithmouDeltiou.Models.ProsthikiArithmouDeltiou

@{
    ViewData["Title"] = "Add Number";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNumber">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label>Fix Date</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Location" class="form-control" value="Προς Επισκευή" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>