@model IEnumerable<MvcProducts.Models.Product>

@{
    ViewData["Title"] = "For Fixing";
}

<table data-toggle="table" data-sort-name="FixDate" data-sort-order="asc">
    <thead>
        <tr>
            <th data-sortable="true" data-align="center" rowspan="2">
                Number
            </th>
            <th rowspan="2">
                Product
            </th>
            <th data-sortable="true" rowspan="2">
                Name
            </th>
            <th colspan="2" data-align="center">
                Date
            </th>
            <th rowspan="2">
                Description
            </th>
            <th data-sortable="true" data-align="center" rowspan="2">
                Send
            </th>
            <th data-align="center" rowspan="2">
                Details
            </th>
            <th data-align="center" rowspan="2">
                To
            </th>
        </tr>
        <tr>
            <th data-align="center" data-sortable="false" data-sorter="dateSorter">
                Receive
            </th>
            <th data-field="FixDate" data-sortable="true" data-align="center" data-sorter="dateSorter">
                Fix
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.Location == "Προς Επισκευή")
            {
                <tr>
                    <td>
                        @if (item.Number == null)
                        {
                            <a asp-action="AddNumber" asp-route-id="@item.ID">Add</a>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Number)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Products)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceiveDate)
                    </td>
                    <td>
                        @if (item.FixDate == null)
                        {
                            <a asp-action="AddDate" asp-route-id="@item.ID">Add</a>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.FixDate)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Send)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                    </td>
                    <td>
                        <a asp-action="Move" asp-route-id="@item.ID">Technician</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>