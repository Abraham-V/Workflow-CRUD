@model MvcProducts.Models.Product

@{
    ViewData["Title"] = "New";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Number</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Product</label>
                <input asp-for="Products" class="form-control" />
                <span asp-validation-for="Products" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Receive Date</label>
                <input asp-for="ReceiveDate" class="form-control" />
            </div>
            <div class="form-group">
                <label>Fix Date</label>
                <input asp-for="FixDate" class="form-control" />
            </div>
            <div class="form-group">
                <label>Description</label>
                @Html.TextArea("Description", null, new { @class = "form-control", @rows = 3 })
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Send</label>
                <br />
                <label class="radio-inline"><input type="radio" asp-for="Send" name="Send" value="Yes">Yes</label>
                <label class="radio-inline"><input type="radio" asp-for="Send" name="Send" value="No">No</label>
            </div>
            <div class="form-group" style="display: none;">
                <input asp-for="Location" class="form-control" value="Προς Επισκευή" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
